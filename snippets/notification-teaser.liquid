{% capture notificationTitle %}
	{{'general.notification.title' | t }}
{% endcapture %}
{% capture notificationCaption %}
	{{'general.notification.caption' | t }}
{% endcapture %}

{% if notificationTitle != blank or notificationCaption != blank %}
	<figure class="Notification">
		<figcaption>
			{{notificationTitle}}
			{{notificationCaption}}
		</figcaption>
	</figure>
{% endif %}
