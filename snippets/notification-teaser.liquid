{% capture notificationTitle %}
	{{'general.notification.title' | t }}
{% endcapture %}
{% capture notificationCaption %}
	{{'general.notification.caption' | t }}
{% endcapture %}

{% if notificationTitle != blank and notificationCaption != blank %}
	{% assign notificationIsActive = notificationTitle %}
	<figure class="Notification">
		<figcaption>
			{{notificationTitle}}
			{{notificationCaption}}
			{{'general.notification.code' | t }}
		</figcaption>
	</figure>
{% endif %}
