{
  "name": "wdlk-shopify-store",
  "version": "2.2.1",
  "description": "Woodlike Ocean shopping experience",
  "main": "index.js",
  "scripts": {
    "commit": "git-cz",
    "bootstrap": "lerna bootstrap --loglevel info --stream",
    "dev": "lerna run dev --no-sort --stream",
    "lerna": "lerna",
    "lint": "xo",
    "reinstall": "npm run clean && npm run bootstrap"
  },
  "devDependencies": {
    "commitizen": "^2.9.6",
    "lerna": "^2.0.0-rc.4",
    "xo": "^0.18.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/woodlike/wdlk-shopify-store.git"
  },
  "keywords": [
    "shopify",
    "sass",
    "es6",
    "graphql",
    "preact"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "xo": {
    "env": [
      "node",
      "browser"
    ],
    "extends": [
      "xo/browser",
      "plugin:flowtype/recommended"
    ],
    "parser": "babel-eslint",
    "plugins": [
      "flow-check",
      "flowtype"
    ],
    "rules": {
      "flow-check/check": "error",
      "flowtype/require-valid-file-annotation": [
        "error",
        "always"
      ]
    },
    "space": true
  },
  "author": "Mauricio Palma <mauricio.palma@woodlikeocean.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/woodlike/wdlk-shopify-store/issues"
  },
  "homepage": "https://github.com/woodlike/wdlk-shopify-store#readme",
  "dependencies": {
    "slate": "^0.21.4"
  }
}
