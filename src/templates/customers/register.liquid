<main class="Container">
    {% form 'create_customer', class: 'Form' %}
    <h1 class="Headline Headline--2 Form-headline">{{ 'customer.register.title' | t }}</h1>
    {{ form.errors | default_errors }}

    <div class="Form-inputWrapper">
      <label for="FirstName" class="Form-label">{{ 'customer.register.first_name' | t }}</label>
      <input type="text" name="customer[first_name]" id="FirstName" class="Form-input InputField" placeholder="{{ 'customer.register.first_name' | t }}" {% if form.first_name %}value="{{ form.first_name }}"{% endif %} autocapitalize="words" autofocus>
    </div>

    <div class="Form-inputWrapper">
      <label for="LastName" class="Form-label">{{ 'customer.register.last_name' | t }}</label>
      <input type="text" name="customer[last_name]" id="LastName" class="Form-input InputField" placeholder="{{ 'customer.register.last_name' | t }}" {% if form.last_name %}value="{{ form.last_name }}"{% endif %} autocapitalize="words">
    </div>

    <div class="Form-inputWrapper">
      <label for="Email" class="Form-label">{{ 'customer.register.email' | t }}</label>
      <input type="email" name="customer[email]" id="Email" class="Form-input InputField {% if form.errors contains 'email' %} Form-inputError{% endif %}" placeholder="{{ 'customer.register.email' | t }}" {% if form.email %} value="{{ form.email }}"{% endif %} autocorrect="off" autocapitalize="off">
    </div>

    <div class="Form-inputWrapper">
      <label for="CreatePassword" class="Form-label">{{ 'customer.register.password' | t }}</label>
      <input type="password" name="customer[password]" id="CreatePassword" class="Form-input InputField {% if form.errors contains 'password' %} Form-inputError{% endif %}" placeholder="{{ 'customer.register.password' | t }}">
    </div>

    <button type="submit" value="{{ 'customer.register.submit' | t }}" class="Btn">{{ 'customer.register.submit' | t }}</button>
    {% endform %}
</main>
