{
  "compilerOptions": {
    "baseUrl": "./src",
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "lib": [
      "dom",
      "dom.iterable",
      "es6",
      "scripthost" ],
    "mapRoot": "./dist/assets",
    "noImplicitAny": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "target": "es6",
  },
  "include":  [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "src/scripts/tracking/fbp-snippet.ts",
    "src/scripts/tracking/ga-snippet.ts"
  ]
}
