<main class="Container Container--brand">
    {% assign videoBgBrandWebM =
        'WDLK_Brand-Video-Bg.webm' | asset_url %}
    {% assign videoBgBrandMp4 =
        'WDLK_Brand-Video-Bg.mp4' | asset_url %}
    {% assign videoBgBrandPoster =
        'WDLK_Brand-Video-Poster.jpg' | asset_url %}
    <section class="TextBlock">
        <h1 class="Headline Headline--1">{{ page.title }}</h1>
        {{ page.content }}
    </section>
    <video class="Video Video--bg" poster="{{ videoBgBrandPoster }}" autoplay loop muted>
        <source src="{{ videoBgBrandWebM }}" type="video/webm" />
        <source src="{{ videoBgBrandMp4 }}" type="video/mp4" />
        I'm sorry; your browser doesn't support HTML5 video.
    </video>
</main>
